    <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonFNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:background="@drawable/shape_button"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:textAllCaps="false"
            android:text="Feature Note" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginTop="30dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            tools:background="#7A70E3"
    />

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonFA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:background="@drawable/shape_button"
            android:textColor="@android:color/white"
            android:text="Feature A"
            android:elevation="4dp"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonFNote"
            tools:background="#7A70E3"/>

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonFB"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:minHeight="80dp"
            android:background="@drawable/shape_button"
            android:textColor="@android:color/white"
            android:text="Feature B"
            android:elevation="4dp"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonFA"
            tools:background="#7A70E3"/>
